

@model PROG6212_CMCS_ST10082700.Models.LoginViewModel
@using PROG6212_CMCS_ST10082700.Models

@{

    ViewData["Title"] = "Login";

}

<div class="login-container">
    <div class="login-header">
        <div class="application-logo">
            <img src="~/Images/CMCS - logo.png" />
        </div>
    </div>
    <h1 class="login-title">LOG IN TO THE CONTRACT MONTHLY CLAIM SYSTEM</h1>
    <form asp-action="Login" asp-controller="Account" method="post" class="login-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input-group">
            <label asp-for="Username" class="input-label"></label>
            <input asp-for="Username" class="input-field" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="input-group">
            <label asp-for="Password" class="input-label"></label>
            <input asp-for="Password" class="input-field" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="continue-button">Continue</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}