@{
    ViewData["Title"] = "Home Page";
}
<div class="landingpage">
    <header class="landing-header">
        <div class="application-logo">
            <img src="~/Images/CMCS - logo.png" alt="CMCS Logo" />
        </div>
        <a href="@Url.Action("Login", "Account")" class="login-button jost-bold">LOGIN</a>
    </header>
    <main class="hero-section">
        <div class="frame-1">
            <h1 class="jost-bold">MANAGE YOUR <span class="highlight">CLAIM</span></h1>
            <h2 class="jost-bold">IN THE MOST EFFICIENT WAY</h2>
        </div>
        <button id="getStartedBtn" class="button-get-started jost-bold">GET STARTED</button>
    </main>
</div>
<script>
    var loginUrl = '@Url.Action("Login", "Account")';
</script>
@section Scripts {
    <script src="~/js/landing-page.js"></script>
}