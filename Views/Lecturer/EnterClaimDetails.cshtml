@model PROG6212___CMCS___ST10082700.Models.ClaimSubmissionModel
@{
    ViewData["Title"] = "Enter Claim Details";
}

<div class="enter-claim-page">
    <header class="main-header">
        <div class="application-logo">
            <img src="~/Images/CMCS - logo.png" alt="CMCS Logo" />
        </div>
        <button class="hamburger-menu" id="hamburgerMenu">
            <svg width="50" height="50" viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10.9375 15.625H39.0625" stroke="#8B1212" stroke-width="1.875" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M10.9375 25H39.0625" stroke="#8B1212" stroke-width="1.875" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M10.9375 34.375H39.0625" stroke="#8B1212" stroke-width="1.875" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </button>
    </header>
    <h1 class="page-title">Enter Your Claim Details.</h1>
    <form asp-action="SubmitClaim" asp-controller="Lecturer" method="post" enctype="multipart/form-data" id="claimForm">
        <div class="form-group">
            <label asp-for="ClaimName">Claim name</label>
            <input asp-for="ClaimName" class="form-control" required>
        </div>
        <div class="form-group">
            <label asp-for="ClaimDate">Date</label>
            <input asp-for="ClaimDate" class="form-control" type="date" required>
        </div>
        <div class="form-group">
            <label asp-for="HoursWorked">Hours worked</label>
            <input asp-for="HoursWorked" class="form-control" type="number" step="0.01" required>
        </div>
        <div class="form-group">
            <label asp-for="HourlyRate">Hourly rates</label>
            <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" required>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label asp-for="SupportingDocument">File upload</label>
            <input type="file" id="SupportingDocument" name="SupportingDocument" style="display: none;">
            <button type="button" class="upload-button">Upload</button>
            <span id="fileName"></span>
        </div>
        <button type="submit" class="submit-button">Submit</button>
    </form>
</div>

@section Scripts {
    <script src="~/js/enter-claim-page.js"></script>
}